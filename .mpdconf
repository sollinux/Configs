#--------------------------PATH-----------------------------------------------
#Директория с музыкой
music_directory		"~/music"
#Директория для хранения плейлиста
playlist_directory		"~/.mpd/playlists"
#Файл базы данных(настроек?)
db_file			"~/.mpd/database"
#Лог файл
log_file			"~/.mpd/log"
#Позволяет использовать mpd --kill
pid_file			"~/.mpd/pid"
#Файл для сохранения текущего состояния(номер песни, громкость и т.д)
state_file			"~/.mpd/state"
#sticker_file			"~/.mpd/sticker.sql"

#-----------------------------------------------------------------------------

#--------------------------USER-----------------------------
#MPD будет запускаться под текущем пользователем, поэтому не будем устанавливать
#поля user и group
#user				"nobody"
#group				"nogroup"
#-----------------------------------------------------------

#------------------------NETWORK----------------------------
#Запускаться локально
bind_to_address		"127.0.0.1"
#Порт
port				"6600"
#-----------------------------------------------------------

#----------------------ETC----------------------------------
#Уровень подробности лога
log_level			"default"
#В файле плейлиста будем использовать относительные пути относительно ~
save_absolute_paths_in_playlists	"no"
#Автоматически обновлять БД, когда файлы в папке с музыкой изменились
auto_update	"yes"
#----------------------------------------------------------



#------------------Права------------------------------------------------
#Не использовать пароль
default_permissions             "read,add,control,admin"
#-----------------------------------------------------------------------

#-------------------------AUDIO OUTPUT----------------------------------------
audio_output {
	type		"alsa"
	name		"My ALSA Device"
#	device		"hw:0,0"	# optional
#	format		"44100:16:2"	# optional
#	mixer_type      "hardware"	# optional
#	mixer_device	"default"	# optional
	mixer_control	"PCM"		# optional
#	mixer_index	"0"		# optional
}
#----------------------------------------------------------------------------

#---------------------------CHARSET---------------------------------------
filesystem_charset		"UTF-8"
id3v1_encoding			"UTF-8"
#-------------------------------------------------------------------------
